{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"href": "https://example.com/schemas/base.schema.json",
	"title": "Base Schema",
	"description": "The base schema provides a starting point for all documents, is the default schema for all documents and is the schema used for metadata.",
	"type": "object",
	"properties": {
		"schema": { "type": "string" },
		"href": { "type": "string" },
		"id": { "type": "string" },
		"template": { "type": "string" },
		"relatedData": { "type": "array" },
		"relatedLists": {
			"type": "array",
			"items": { "$ref": "https://example.com/schemas/list.schema.json" }
		},
		"alternates": {
			"type": "array",
			"items": { "$ref": "https://example.com/schemas/operation.schema.json" }
		},
		"operations": {
			"type": "array",
			"items": { "$ref": "https://example.com/schemas/operation.schema.json" }
		},
		"errors": {
			"type": "array",
			"items": { "$ref": "https://example.com/schemas/error.schema.json" }
		}
	},
	"required": ["schema"]
}
